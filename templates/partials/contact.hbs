<div class="container-fluid mt-5 about-style" id="contactid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h1 class="text-center main-heading">Contact Us</h1>
      <p class="text-center sub-heading">Grow your business with us</p>
      <div class="row">
        <div class="col-md-6 col-12 hero-text">
         
        </div>
<form action="/contact" method="POST">
  <div class="form-group">
    <label for="exampleInputPassword1" >Name</label>
    <input
      type="text"
      class="form-control"
      id="exampleInputPassword1"
      name="name"
    />
   </div>
  
  <div class="form-group">
    <label for="exampleInputEmail" >Email</label>
    <input type="Email" class="form-control" id="exampleInputEmail1"  name="email"/>
  </div>
  <div class="form-group">
    <label for="phone" class="form-label">Phone No:</label>
    <input
      type="number"
      class="form-control"
      id="exampleInputphone"
      name="phone"
    />
    <div class="form-group">
    <label for="message" class="form-label">Message:</label>
    <input
      type="Text"
      class="form-control"
      id="exampleInputmessage"
      aria-describedby="messageHelp"
      name="message"
    />
   
  <button type="submit" class="btn-style btn-primary">Submit</button>
</form>